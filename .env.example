# Spring Profile
SPRING_PROFILE=local

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/notification_db
DATABASE_USERNAME=
DATABASE_PASSWORD=
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=20000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=2
REDIS_POOL_MAX_WAIT=-1ms

# Redis Streams Configuration
REDIS_STREAM_USER_EVENTS=notification:user-events
REDIS_STREAM_ASSESSMENT_EVENTS=notification:assessment-events
REDIS_STREAM_PROCTORING_EVENTS=notification:proctoring-events
REDIS_STREAM_NOTIFICATION_EVENTS=notification:notification-events
REDIS_CONSUMER_GROUP_ID=notification-service-group
REDIS_CONSUMER_NAME=notification-service-consumer-1

# Mailtrap Configuration (for testing)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@examplatform.com
MAIL_FROM_NAME=Exam Platform

# Casdoor OAuth2 Configuration
CASDOOR_ISSUER_URI=
CASDOOR_JWK_URI=

# Server Configuration
SERVER_PORT=8082
TOMCAT_CONNECTION_TIMEOUT=86400000
TOMCAT_MAX_CONNECTIONS=10000
TOMCAT_ACCEPT_COUNT=100

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_FILE_NAME=logs/application.log

# Notification Configuration
NOTIFICATION_RETRY_MAX_ATTEMPTS=2
NOTIFICATION_RETRY_DELAY_MS=10000

# SSE Configuration
SSE_TIMEOUT_MS=86400000
SSE_HEARTBEAT_INTERVAL_MS=30000
SSE_CONNECTION_LIMIT=5

# Flyway
FLYWAY_ENABLED=true
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# MVC Async
MVC_ASYNC_TIMEOUT=86400000

# Scheduling
SCHEDULING_POOL_SIZE=5